<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="Model" namespace="SportFinderApi.Models">  
    <class name="User" table="Users" dynamic-update="true">  
        <cache usage="read-write" />  
        <id name="Id" column="Id" type="int">  
            <generator class="native" />  
        </id>  
        <property name="FirstName" />  
        <property name="LastName" />  
        <property name="UserName" />  
        <property name="Email" />
        <property name="Password" />
        <many-to-one name="City" class="City" column="CityId" />
        <bag name="Events" table="UsersEvents" lazy="false" >
          <key column="UserId"></key>
          <many-to-many class="Event" column="EventId"></many-to-many>
        </bag>
    </class>  
</hibernate-mapping>